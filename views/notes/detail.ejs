<div class="card">
    <div class="card-header">
      <%= note.title %> 
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= note.note %> </p>
      </blockquote>
      <a href="/note/edit/<%= note._id %>" class="btn btn-sm btn-warning ">Edit</a>
      <form action="/note?_method=DELETE" method="POST" class="d-inline">
        <input type="hidden" name="_id" value="<%= note._id %>">
        <button type="submit" class="btn btn-sm btn-danger" onClick ="return confirm('yakin?')">Delete</button>
      </form>
    </div>
  </div>