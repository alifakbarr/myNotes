<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="alert alert-warning" role="alert">
                Write Your Notes!
              </div>
            <form action="/note" method="post" class="shadow p-3 mb-5 bg-body rounded">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" placeholder="My Notes" required name="title">
                  </div>
                  <div class="mb-3">
                    <label for="note" class="form-label">Notes</label>
                    <textarea class="form-control" id="note" rows="4" required name="note"></textarea>
                  </div>
                  <div class="d-flex justify-content-end">
                      <button type="submit" class="btn btn-sm btn-warning">Save</button>
                  </div>
            </form>
        </div>
    </div>
</div>